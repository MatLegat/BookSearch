<%= form_with model: @book, local: true do |form| %>
  <p>
    <%= form.label :title %><br />
    <%= form.text_field :title %><br />
  </p>
  <p>
    <%= form.label :author %><br />
    <%= form.text_field :author %><br />
  </p>
  <p>
    <%= form.label :description %><br />
    <%= form.text_area :description %><br />
  </p>
  <p>
    <%= form.label :img %><br />
    <%= form.text_field :img %><br />
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
