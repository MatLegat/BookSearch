<h2>Manage Users</h2>
<table class="table table-striped">
  <tr>
    <th scope="col">Email</td>
    <th scope="col">Status</td>
    <th scope="col">Actions</td>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <th scope="row"><%= user.email %></td>
      <td><%= user.approved ? 'Approved' : 'Not Approved' %></td>
      <td>
        <% if user.id == current_user.id %>
          <%= link_to "Manage", edit_user_registration_path, class: "button btn btn-primary" %>
        <% else %>
          <% if not user.approved %>
            <%= link_to 'Approve', user, method: :put, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %>
          <% end %>
          <%= link_to 'Remove', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
